<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="9dp"
            android:text="明星学员"
            android:textColor="#464646"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/more_than"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="9dp"
            android:text="更多"
            android:textColor="#A3A3A3"
            android:textSize="@dimen/text_size_14" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <RelativeLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/xueyuan_photo1"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/xueyuan_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/xueyuan_photo1"
                android:layout_marginLeft="15dp"
                android:text="徐欣"
                android:textColor="#262626"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/grow_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/xueyuan_photo1"
                android:layout_below="@id/xueyuan_photo1"
                android:layout_marginRight="5dp"
                android:text="46人成长"
                android:textColor="#A3A3A3"
                android:textSize="@dimen/text_size_14" />

        </RelativeLayout>


        <RelativeLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/xueyuan_photo2"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/course2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/xueyuan_photo2"
                android:layout_marginLeft="15dp"
                android:text="王萌萌"
                android:textColor="#262626"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/join_number2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/xueyuan_photo2"
                android:layout_below="@id/xueyuan_photo2"
                android:text="24成长"
                android:textColor="#A3A3A3"
                android:textSize="@dimen/text_size_14" />

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>